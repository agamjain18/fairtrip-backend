[Unit]
Description=Gunicorn instance to serve FairTrip Backend
After=network.target

[Service]
User=agamjain
Group=www-data
WorkingDirectory=/home/agamjain/fairtrip-backend
Environment="PATH=/home/agamjain/fairtrip-backend/venv/bin"
ExecStart=/home/agamjain/fairtrip-backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000

# Restart settings
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
